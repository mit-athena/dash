/*
 *#include "mit-copyright.h"
 */

XCLUSTER	=	xcluster
CVIEW		=	cview

RESOURCES	=	Xcluster

#ifdef _AUX_SOURCE
M_LIB		=	-lmalloc
#else
M_LIB		=
#endif

X_OBJS		=	xcluster.o read.o net.o check.o
OBJS		=	cview.o net.o

CFILES		=	xcluster.c read.c net.c check.c cview.c

XLIB		=	-lX11
XJLIB		=	../lib/libXj.a
HLIB		=	-lhesiod
LIBS		=	${XJLIB} ${XLIB} ${M_LIB} ${HLIB}

#if defined(ibm032)
DEFINES		=	-DSHAPE -D_BSD -D_BSD_INCLUDES -DAIXV=12 -DAPPDEFDIR=\"${ATHXAPPDIR}\"
#else
DEFINES		=	-DSHAPE -DAPPDEFDIR=\"${ATHXAPPDIR}\"
#endif


AnsiCC()

SimpleProgram(${XCLUSTER},${X_OBJS},${LIBS},${ATHBINDIR}/${XCLUSTER})
SimpleProgram(${CVIEW},${OBJS},${HLIB},${ATHBINDIR}/${CVIEW})
install_man(${XCLUSTER}.1,${XCLUSTER}.1)
install_man(${CVIEW}.1,${CVIEW}.1)
install_file(${RESOURCES},${ATHXAPPDIR}/${RESOURCES})
create_depend(${CFILES})
