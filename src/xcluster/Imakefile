#include "mit-copyright.h"

XCLUSTER	=	xcluster
CVIEW		=	cview

RESOURCES	=	Xcluster

#ifdef _AUX_SOURCE
M_LIB		=	-lmalloc
#else
M_LIB		=
#endif

X_OBJS		=	Jets.o hash.o registerCallbacks.o \
			Label.o Icon.o Form.o Button.o Window.o \
			xcluster.o Tree.o Drawing.o read.o net.o check.o
OBJS		=	cview.o net.o

CFILES		=	hash.c registerCallbacks.c \
			Jets.c Button.c Form.c Icon.c \
			Label.c Menu.c \
			Tree.c Window.c \
			Drawing.c \
			xcluster.c read.c net.c check.c cview.c

LIBS		=	-lX11 ${M_LIB} -lhesiod
HLIB		=	-lhesiod

#if defined(ibm032)
DEFINES		=	-DSHAPE -D_BSD -D_BSD_INCLUDES -DAIXV=12
#else
DEFINES		=	-DSHAPE
#endif


AnsiCC()

SimpleProgram(${XCLUSTER},${X_OBJS},${LIBS},${ATHBINDIR}/${XCLUSTER})
SimpleProgram($(CVIEW),$(OBJS),$(HLIB),$(ATHBINDIR)/$(CVIEW))
install_man(${XCLUSTER}.1,${XCLUSTER}.1)
install_man($(CVIEW).1,$(CVIEW).1)
install_file(${RESOURCES},${ATHXAPPDIR}/${RESOURCES})
create_depend(${CFILES})
